<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teksystems.bootcamp.capstone2.controllers.CharacterSelectionController">
   <ImageView fitHeight="408.0" fitWidth="600.0" layoutY="-4.0">
      <image>
         <Image url="@images/pixel-art-game-background-grass-sky-clouds_210544-60.jpeg" />
      </image>
   </ImageView>
   <Button layoutX="122.0" layoutY="265.0" mnemonicParsing="false" onAction="#startForestQuest" prefHeight="27.0" prefWidth="136.0" styleClass="spriteButton" stylesheets="@spriteStyles.css" text="Select Magi">
      <font>
         <Font name="Didot" size="18.0" />
      </font></Button>
   <Button ellipsisString="" layoutX="286.0" layoutY="265.0" mnemonicParsing="false" onAction="#startCityQuest" prefHeight="37.0" prefWidth="160.0" styleClass="spriteButton" stylesheets="@spriteStyles.css" text="Select Joe" textOverrun="CLIP">
      <font>
         <Font name="Didot" size="18.0" />
      </font></Button>
   <Button layoutX="153.0" layoutY="150.0" mnemonicParsing="false" prefHeight="101.0" prefWidth="82.0" styleClass="sprite" stylesheets="@spriteStyles.css">
