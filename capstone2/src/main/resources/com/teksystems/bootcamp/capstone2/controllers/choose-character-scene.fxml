         <ImageView fitHeight="125.0" fitWidth="107.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/JoeFighter.png" />
            </image>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </ImageView>
      </graphic>
   </Button>
   <Text fx:id="chooseCharacterText" layoutX="138.0" layoutY="121.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose Your Character">
      <font>
         <Font name="Didot" size="29.0" />
      </font>
   </Text>
</AnchorPane>
